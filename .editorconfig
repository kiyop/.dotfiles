root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{py,xml,sql}]
indent_style = space
indent_size = 4

[{*.go,Makefile}]
indent_style = tab
indent_size = 4
